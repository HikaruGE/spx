target setup footer [[
    Exp "+" Exp -> Exp {cons("Plus")}
  context-free syntax
    CONTENTCOMPLETE -> MetaAnno {cons("COMPLETION-MetaAnno")}
    CONTENTCOMPLETE -> Statement {cons("COMPLETION-Statement")}
    CONTENTCOMPLETE -> Exp {cons("COMPLETION-Exp")}
]]
